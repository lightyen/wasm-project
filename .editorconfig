# EditorConfig is awesome: https://editorconfig.org/

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.json]
indent_style = space
indent_size = 4

[{package.json,tsconfig.json,tslint.json,.travis.yml}]
indent_style = space
indent_size = 2

[*.{tsx,ts,jsx,js,html,ejs}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.{scss,css}]
indent_style = space
indent_size = 4
max_line_length = 80